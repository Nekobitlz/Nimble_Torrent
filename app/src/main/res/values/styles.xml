<resources>

    <style name="AppTheme.Light" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/colorRedMain</item>
        <item name="colorPrimaryDark">@color/colorRedDark</item>
        <item name="colorAccent">@color/colorRedLight</item>

        <item name="activityBackground">@color/colorGrey</item>
        <item name="toolbarBackground">@color/colorRedDark</item>
        <item name="toolbarTextColor">@color/colorGreyLight</item>
        <item name="isLightTheme">true</item>

        <item name="tabTitleTextColor">@color/colorGreyLight</item>
        <item name="cardTextColor">@color/colorGreyDark</item>

    </style>

    <style name="ToolbarStyle">

        <item name="android:background">?toolbarBackground</item>
        <item name="android:textColor">?toolbarTextColor</item>
        <item name="android:textColorPrimary">?toolbarTextColor</item>
        <item name="android:textColorSecondary">?toolbarTextColor</item>
        <item name="isLightTheme">?isLightTheme</item>

    </style>

</resources>
